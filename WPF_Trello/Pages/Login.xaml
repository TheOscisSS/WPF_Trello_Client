<Page x:Class="WPF_Trello.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:WPF_Trello.Pages"
      DataContext="{Binding LoginViewModel, Source={StaticResource ViewModelLocator}}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0 0 0 20">
            <TextBlock HorizontalAlignment="Center" Foreground="#5E6C84" FontSize="20"
                       FontWeight="Bold" Margin="0 35 0 25" >
                Log in to Trello
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1"  Margin="0 0 0 40">
            <StackPanel Orientation="Vertical" Margin="40 0" MaxWidth="350">
                <TextBox Margin="0 0 0 30"
                         FontSize="14"
                         FontWeight="Regular"
                         VerticalAlignment="Top"
                         Text="{Binding EmailInputField, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                         materialDesign:HintAssist.Hint="Emai"
                         />
                <PasswordBox Margin="0 0 0 30"
                         FontSize="14"
                         FontWeight="Regular"
                         VerticalAlignment="Top"
                         Style="{StaticResource MaterialDesignFilledPasswordFieldPasswordBox}"
                         materialDesign:HintAssist.Hint="Password"
                         />
                <Button Height="44" Background="#5AAC44" BorderBrush="Transparent" 
                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                        Command="{Binding SendCredentialsToServer}">
                    Log in
                </Button>
                <TextBlock HorizontalAlignment="Center" Margin="0 25 0 0">
                    <Hyperlink Command="{Binding ChangePage}">Sign up for an account</Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
