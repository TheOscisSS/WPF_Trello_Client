<Page x:Class="WPF_Trello.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      DataContext="{Binding HomeViewModel, Source={StaticResource ViewModelLocator}}"
      xmlns:local="clr-namespace:WPF_Trello.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#026aa7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="5 0 0 0" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <Border Background="#4d98c3" Margin="0 3 0 3" 
                            BorderThickness="1" CornerRadius="3,3,3,3">
                        <Button
                            Height="26"
                            Width="28"
                            Padding="0"
                            Command="{Binding ComeToLoginPage}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="MaterialDesignFlatButton">
                            <materialDesign:PackIcon
                                Kind="Home"
                                Height="24"
                                Width="24" />
                        </Button>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="White" FontSize="20" FontWeight="Bold">
                    Trello
                </TextBlock>
            </Grid>

            <Grid Grid.Column="2" Margin="0 0 5 0" HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Border Background="#4d98c3" Margin="0 3 0 3" 
                            BorderThickness="1" CornerRadius="3,3,3,3">
                        <Button
                            Height="26"
                            Width="28"
                            Padding="0"
                          
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="MaterialDesignFlatButton">
                            <materialDesign:PackIcon
                                Kind="Plus"
                                Height="24"
                                Width="24" />
                        </Button>
                    </Border>

                    <Border Background="#4d98c3" Margin="0 3 0 3" 
                            BorderThickness="1" CornerRadius="3,3,3,3">
                        <Button
                            Height="26"
                            Width="28"
                            Padding="0"
                          
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="MaterialDesignFlatButton">
                            <materialDesign:PackIcon
                                Kind="InfoOutline"
                                Height="24"
                                Width="24" />
                        </Button>
                    </Border>

                    <Border Background="#4d98c3" Margin="0 3 0 3" 
                            BorderThickness="1" CornerRadius="3,3,3,3">
                        <Button
                            Height="26"
                            Width="28"
                            Padding="0"
                          
                            Style="{StaticResource MaterialDesignFlatButton}"
                            ToolTip="MaterialDesignFlatButton">
                            <materialDesign:PackIcon
                                Kind="NotificationsNone"
                                Height="24"
                                Width="24" />
                        </Button>
                    </Border>
                </StackPanel>
            </Grid>
            
        </Grid>

        <Grid Grid.Row="1">
            <ListBox ItemsSource="{Binding Boards}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" IsItemsHost="True">
                        </WrapPanel>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>


                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel Orientation="Horizontal">
                            <Border BorderThickness="1" CornerRadius="10,10,10,10">
                                <TextBlock Text="{Binding Path=Name}" Foreground="White" FontSize="16" FontWeight="Bold" Width="170" Height="100">
                                    <TextBlock.Background>
                                        <ImageBrush ImageSource="{Binding Path=Img}" Stretch="UniformToFill"/>
                                    </TextBlock.Background> 
                                </TextBlock>
                            </Border>
                        </WrapPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        
    </Grid>
</Page>
